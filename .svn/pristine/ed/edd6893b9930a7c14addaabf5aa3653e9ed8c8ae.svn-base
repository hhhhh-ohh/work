<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanmi.ares.report.goods.dao.GoodsCateMapper">

    <sql id="commonAddColSql">
      SHOP_ID,CATE_ID,ORDER_COUNT,ORDER_MONEY,ORDER_NUM,PAY_COUNT,PAY_MONEY,PAY_NUM,REFUND_COUNT,REFUND_MONEY,REFUND_NUM,CREATE_TM,CUSTOMER_COUNT,CUSTOMER_PAY_COUNT,IS_LEAF
    </sql>

    <sql id="commonWhereSql">
        WHERE
        <if test="storeSelectType == null or storeSelectType == @com.wanmi.ares.enums.StoreSelectType@ALL">
            SHOP_ID = #{companyId}
        </if>
        <if test="storeSelectType == @com.wanmi.ares.enums.StoreSelectType@O2O">
            SHOP_ID = #{o2oCompanyId}
        </if>
        <if test="storeSelectType == @com.wanmi.ares.enums.StoreSelectType@SUPPLIER">
            SHOP_ID = -2
        </if>
        <if test="ids != null and ids.size > 0">
            and CATE_ID in
            <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>

        <if test="isLeaf != null">
            AND IS_LEAF = #{isLeaf}
        </if>

        <if test="date != null">
            AND STAT_DATE = date_format(#{date},'%Y-%m-%d')
        </if>
        <if test="month != null">
            AND STAT_MONTH = #{month}
        </if>
        <if test="year != null">
            AND STAT_YEAR = #{year}
        </if>
        <if test="begDate!=null">
            and stat_date &gt;=#{begDate}
        </if>
        <if test="endDate!=null">
            and stat_date &lt;= #{endDate}
        </if>
    </sql>

    <sql id="commonQuerySql">
        SELECT
          CATE_ID AS id,
          ORDER_COUNT AS orderCount,
          ORDER_MONEY AS orderAmt,
          ORDER_NUM AS orderNum,
          PAY_COUNT AS payCount,
          PAY_NUM AS payNum,
          PAY_MONEY AS payAmt,
          REFUND_COUNT AS returnOrderCount,
          REFUND_MONEY AS returnOrderAmt,
          REFUND_NUM AS returnOrderNum,
          CUSTOMER_COUNT AS customerCount,
          CUSTOMER_PAY_COUNT AS customerPayCount,
          SHOP_ID AS companyId
        <if test="table == 'goods_cate_month'">
            from goods_cate_month
        </if>
        <if test="table == 'goods_store_cate_month'">
            from goods_store_cate_month
        </if>
        <if test="table == 'goods_cate_recent_seven'">
            from goods_cate_recent_seven
        </if>
        <if test="table == 'goods_store_cate_recent_seven'">
            from goods_store_cate_recent_seven
        </if>
        <if test="table == 'goods_cate_recent_thirty'">
            from goods_cate_recent_thirty
        </if>
        <if test="table == 'goods_store_cate_recent_thirty'">
            from goods_store_cate_recent_thirty
        </if>
        <if test="table == 'goods_cate_day'">
            from goods_cate_day
        </if>
        <if test="table == 'goods_store_cate_day'">
            from goods_store_cate_day
        </if>
    </sql>

    <sql id="statisticsQuery">
         select
            companyId,
            cateId,
            COALESCE(sum(orderCount),0) orderCount,
            COALESCE(sum(orderPrice),0) orderPrice,
            COALESCE(sum(orderNum),0) orderNum,
            COALESCE(sum(payCount),0) payCount,
            COALESCE(sum(payPrice),0) payPrice,
            COALESCE(sum(payNum),0) payNum,
            COALESCE(sum(returnCount),0) returnCount,
            COALESCE(sum(returnPrice),0) returnPrice,
            COALESCE(sum(returnNum),0) returnNum,
            now(),
            COALESCE(sum(customerCount),0) customerCount,
            COALESCE(sum(customerPayCount),0) customerPayCount,
            1
        from(

                select
                    a.companyId,
                    a.cateId,
                    a.orderCount,
                    a.orderPrice,
                    a.orderNum,
                    0 payCount,
                    0 payPrice,
                    0 payNum,
                    0 returnCount,
                    0 returnPrice,
                    0 returnNum,
                    c.customerCount,
                    f.customerPayCount
                from (
                    select
                        t.company_id companyId,i.cate_id cateId, count(1) orderCount,sum(level_price*num) orderPrice,sum(num) orderNum
                    from replay_trade t
                    left join replay_trade_item i on(t.tid=i.tid)
                    where t.create_time &gt;= #{beginTime} and t.create_time &lt; #{endTime}
                    group by t.company_id,i.cate_id
                ) a
                left join (
                    select
                        cateId,count(customerId) customerCount
                    from (
                        select
                          i.cate_id cateId,t.customer_id customerId
                        from replay_trade t
                        left join replay_trade_item i on(t.tid=i.tid)
                        where t.create_time &gt;= #{beginTime} and t.create_time &lt; #{endTime}
                        group by i.cate_id,t.customer_id
                    ) tmp group by cateId
                )c on(a.cateId=c.cateId)
                left join (
                    select
                        cateId,count(customerId) customerPayCount
                    from (
                        select
                          i.cate_id cateId,t.customer_id customerId
                        from replay_trade t
                        left join replay_trade_item i on(t.tid=i.tid)
                        where t.pay_time &gt;= #{beginTime} and t.pay_time &lt; #{endTime} and t.pay_state=2
                        group by i.cate_id,t.customer_id
                    ) tmp group by cateId
                )f on(a.cateId=f.cateId)
                union all(
                    select
                        t.company_id companyId,
                        i.cate_id cateId,
                        0 orderCount,
                        0 orderPrice,
                        0 orderNum,
                        count(i.id) payCount,
                        IFNULL(sum(i.split_price),0) payPrice,
                        sum(num) payNum,
                        0 returnCount,
                        0 returnPrice,
                        0 returnNum,
                        0 customerCount,
                        0 customerPayCount
                    from replay_trade t
                    left join replay_trade_item i on(t.tid=i.tid)
                    where t.pay_time &gt;= #{beginTime} and t.pay_time &lt; #{endTime} and t.pay_state=2
                    group by  t.company_id,i.cate_id
                )

            union all

                select
                    o.company_id companyId,
                    i.cate_id cateId,
                    0 orderCount,
                    0  orderPrice,
                    0 orderNum,
                    0 payCount,
                    0 payPrice,
                    0 payNum,
                    count(i.id) returnCount,
                    sum(i.price*i.num) returnPrice,
                    sum(i.num) returnNum,
                    0 customerCount,
                    0 customerPayCount
                from replay_return_order o
                left join replay_return_item i on(o.rid=i.rid)
                where finish_time &gt;= #{beginTime} and finish_time &lt; #{endTime}
                group by o.company_id,i.cate_id

        ) g where cateId is not null GROUP BY companyId,cateId

        union all
        select
            0 companyId,
            cateId,
            COALESCE(sum(orderCount),0) orderCount,
            COALESCE(sum(orderPrice),0) orderPrice,
            COALESCE(sum(orderNum),0) orderNum,
            COALESCE(sum(payCount),0) payCount,
            COALESCE(sum(payPrice),0) payPrice,
            COALESCE(sum(payNum),0) payNum,
            COALESCE(sum(returnCount),0) returnCount,
            COALESCE(sum(returnPrice),0) returnPrice,
            COALESCE(sum(returnNum),0) returnNum,
            now(),
            COALESCE(sum(customerCount),0) customerCount,
            COALESCE(sum(customerPayCount),0) customerPayCount,
            1
        from (
            select
                a.cateId,
                a.orderCount,
                a.orderPrice,
                a.orderNum,
                0 payCount,
                0 payPrice,
                0 payNum,
                0 returnCount,
                0 returnPrice,
                0 returnNum,
                c.customerCount,
                f.customerPayCount
                from (
                  select i.cate_id cateId, count(1) orderCount,sum(level_price*num) orderPrice,sum(num) orderNum
                from replay_trade t
                left join replay_trade_item i on(t.tid=i.tid)
                where t.create_time &gt;= #{beginTime} and t.create_time &lt; #{endTime}
                group by i.cate_id
            ) a
            left join (
                    select
                        cateId,count(customerId) customerCount
                    from (
                        select
                          i.cate_id cateId,t.customer_id customerId
                        from replay_trade t
                        left join replay_trade_item i on(t.tid=i.tid)
                        where t.create_time &gt;= #{beginTime} and t.create_time &lt; #{endTime}
                        group by i.cate_id,t.customer_id
                    ) tmp group by cateId
                )c on(a.cateId=c.cateId)
                left join (
                    select
                        cateId,count(customerId) customerPayCount
                    from (
                        select
                          i.cate_id cateId,t.customer_id customerId
                        from replay_trade t
                        left join replay_trade_item i on(t.tid=i.tid)
                        where t.pay_time &gt;= #{beginTime} and t.pay_time &lt; #{endTime} and t.pay_state=2
                        group by i.cate_id,t.customer_id
                    ) tmp group by cateId
                )f on(a.cateId=f.cateId)
           union all (
             select
                i.cate_id cateId,
                0 orderCount,
                0 orderPrice,
                0 orderNum,
                count(i.id) payCount,
                IFNULL(sum(i.split_price),0) payPrice,
                sum(num) payNum,
                0 returnCount,
                0 returnPrice,
                0 returnNum,
                0 customerCount,
                0 customerPayCount
            from replay_trade t
            left join replay_trade_item i on(t.tid=i.tid)
            where t.pay_time &gt;= #{beginTime} and t.pay_time &lt; #{endTime} and t.pay_state=2
            group by  t.company_id,i.cate_id
            )

          union all

            select
                i.cate_id cateId,
                0 orderCount,
                0  orderPrice,
                0 orderNum,
                0 payCount,
                0 payPrice,
                0 payNum,
                count(i.id) returnCount,
                sum(i.price*i.num) returnPrice,
                sum(i.num) returnNum,
                0 customerCount,
                0 customerPayCount
            from replay_return_order o
            left join replay_return_item i on(o.rid=i.rid)
            where finish_time &gt;= #{beginTime} and finish_time &lt; #{endTime}
            group by i.cate_id
        )g group by cateId
        having cateId is not null
    </sql>

    <select id="queryGoodsCateReport" resultType="com.wanmi.ares.report.goods.model.root.GoodsReport">
        <include refid="commonQuerySql"/>
        <include refid="commonWhereSql"/>
        ORDER BY ${sortCol} ${sortType}, CATE_ID ASC
        limit #{number}, #{size}
    </select>

    <select id="countGoodsCateReport" resultType="long">
        SELECT COUNT(1)
        <if test="table == 'goods_cate_month'">
            from goods_cate_month
        </if>
        <if test="table == 'goods_store_cate_month'">
            from goods_store_cate_month
        </if>
        <if test="table == 'goods_cate_recent_seven'">
            from goods_cate_recent_seven
        </if>
        <if test="table == 'goods_store_cate_recent_seven'">
            from goods_store_cate_recent_seven
        </if>
        <if test="table == 'goods_cate_recent_thirty'">
            from goods_cate_recent_thirty
        </if>
        <if test="table == 'goods_store_cate_recent_thirty'">
            from goods_store_cate_recent_thirty
        </if>
        <if test="table == 'goods_cate_day'">
            from goods_cate_day
        </if>
        <if test="table == 'goods_store_cate_day'">
            from goods_store_cate_day
        </if>
        <include refid="commonWhereSql"/>
    </select>
    <select id="queryGoodsCateReportByCateId" resultType="com.wanmi.ares.report.goods.model.root.GoodsReport">
        select
        sum(order_count) orderCount,
        sum(order_money) orderAmt,
        sum(order_num) orderNum,
        sum(CUSTOMER_COUNT) customerCount,
        sum(CUSTOMER_PAY_COUNT) customerPayCount,
        sum(pay_count) payCount,
        sum(pay_money) payAmt,
        sum(pay_num) payNum,
        sum(REFUND_count) returnOrderCount,
        sum(REFUND_money) returnOrderAmt,
        sum(REFUND_num) returnOrderNum
        <if test="table == 'goods_cate_month'">
            from goods_cate_month report
        </if>
        <if test="table == 'goods_store_cate_month'">
            from goods_store_cate_month report
        </if>
        <if test="table == 'goods_cate_recent_seven'">
            from goods_cate_recent_seven report
        </if>
        <if test="table == 'goods_store_cate_recent_seven'">
            from goods_store_cate_recent_seven report
        </if>
        <if test="table == 'goods_cate_recent_thirty'">
            from goods_cate_recent_thirty report
        </if>
        <if test="table == 'goods_store_cate_recent_thirty'">
            from goods_store_cate_recent_thirty report
        </if>
        <if test="table == 'goods_cate_day'">
            from goods_cate_day report
        </if>
        <if test="table == 'goods_store_cate_day'">
            from goods_store_cate_day report
        </if>

        <include refid="commonWhereSql"/>
        ORDER BY ${sortCol} ${sortType}, CATE_ID ASC
        limit #{number}, #{size}
    </select>

    <select id="queryGoodsCateChild" resultType="long">
        <bind name="likePattern" value="catePath+'%'"/>
        select cate_id from replay_goods_cate where cate_path like #{likePattern}
    </select>

    <select id="queryGoodsCatePath" resultType="string">
        select cate_path from replay_goods_cate where cate_id = #{cateId}
    </select>

    <select id="queryGoodsCateReportByExport" resultType="com.wanmi.ares.report.goods.model.root.GoodsCateReport">
        select a.*,
            b.cate_name cateName,
            b.cate_parent_id cateParentId,
            c.cate_name cateParentName
        from
        (
            select
            cate_id id,
            sum(order_count) orderCount,
            sum(order_money) orderAmt,
            sum(order_num) orderNum,
            sum(pay_count) payCount,
            sum(pay_money) payAmt,
            sum(pay_num) payNum,
            sum(REFUND_count) returnOrderCount,
            sum(REFUND_money) returnOrderAmt,
            sum(REFUND_num) returnOrderNum,
            sum(CUSTOMER_COUNT) customerCount,
            sum(CUSTOMER_PAY_COUNT) customerPayCount
            from goods_cate_day report
            <include refid="commonWhereSql"/>
            group by cate_id
          ORDER BY orderNum DESC
        )a
        left join replay_goods_cate b on(a.id = b.cate_id)
        left join replay_goods_cate c on(b.cate_parent_id = c.cate_id)
    </select>

    <delete id="delSevenDayReport">
        TRUNCATE TABLE GOODS_CATE_RECENT_SEVEN
    </delete>

    <delete id="delThirtyDayReport">
        TRUNCATE TABLE GOODS_CATE_RECENT_THIRTY
    </delete>

    <delete id="delDayReport" parameterType="String">
        DELETE FROM GOODS_CATE_DAY WHERE STAT_DATE = date_format(#{date},'%Y-%m-%d')
    </delete>

    <delete id="delMonthReport" parameterType="int">
        DELETE FROM GOODS_CATE_MONTH WHERE STAT_MONTH = #{date}
    </delete>

    <insert id="saveDayReportBySelect">
        insert into goods_cate_day(
        <include refid="commonAddColSql"/>
        ,STAT_DATE,id
        )
        select statistic.*,#{statDate},CONCAT(#{statDate},',',statistic.companyId,',',statistic.cateId) from (
        <include refid="statisticsQuery"/>
        ) statistic
    </insert>

    <insert id="saveMonthReportBySelect">
        insert into goods_cate_month(
        <include refid="commonAddColSql"/>
        ,STAT_MONTH,ID
        )
        select statistic.*,${statDate},CONCAT(#{statDate},',',statistic.companyId,',',statistic.cateId) from (
        <include refid="statisticsQuery"/>
        ) statistic
    </insert>

    <insert id="saveSevenDayReportBySelect">
        insert into goods_cate_recent_seven(
        <include refid="commonAddColSql"/>
        )
        select statistic.* from (
        <include refid="statisticsQuery"/>
        ) statistic
    </insert>

    <insert id="saveThirtyDayReportBySelect">
        insert into goods_cate_recent_thirty(
        <include refid="commonAddColSql"/>
        )
        select statistic.* from (
        <include refid="statisticsQuery"/>
        ) statistic
    </insert>

    <select id="queryGoodsCateByIds" resultType="com.wanmi.ares.source.model.root.GoodsCate">
        select
          a.cate_id id,
          a.cate_name name,
          a.cate_parent_id parentId,
          b.cate_name parentNames,
          a.cate_grade grade,
          a.is_default isDefault
        from replay_goods_cate a
        left join replay_goods_cate b on(a.cate_parent_id=b.cate_id)
        <where>
           and  a.cate_id IN
            <foreach collection="ids" item="item" index="index" separator="," open="(" close=")">
                #{item}
            </foreach>
        </where>

    </select>
</mapper>