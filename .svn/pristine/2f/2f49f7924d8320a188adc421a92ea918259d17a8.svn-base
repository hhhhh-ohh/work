<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanmi.ares.report.goods.dao.GoodsInfoSpecDetailRelMapper" >

    <select id="queryByGoodsId" resultType="com.wanmi.ares.source.model.root.GoodsInfoSpecDetailRel">
        select
          goods_id goodsId,
          goods_info_id goodsInfoId,
          spec_detail_id specDetailId,
          spec_id specId,
          detail_name detailName
        from replay_goods_info_spec_detail_rel
        <where>
            <if test="ids != null and ids.size > 0">
                and goods_info_id in
                <foreach collection="ids" item="item" index="index"  open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <select id="queryDetailNameGroupByGoodsId" resultType="com.wanmi.ares.source.model.root.GoodsInfoSpecDetailRel">
        select
        goods_info_id goodsInfoId,
        group_concat(detail_name) detailName
        from replay_goods_info_spec_detail_rel
        <where>
            <if test="ids != null and ids.size > 0">
                and goods_info_id in
                <foreach collection="ids" item="item" index="index"  open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
        </where>
        group by goodsInfoId
    </select>

    <select id="findGoodsNameAndSpecDetail"
            resultType="com.wanmi.ares.marketing.appointment.model.entity.GoodsNameAndSpecDetail">
        select goodsInfo.goods_info_id as goodsInfoId,
               goodsInfo.goods_info_name as goodsInfoName,
               goodsInfo.goods_info_no as goodsInfoNo,
               GROUP_CONCAT(specDetail.detail_name) as specDetail
        from
            replay_goods_info goodsInfo
        LEFT JOIN replay_goods_info_spec_detail_rel specDetail
        ON goodsInfo.goods_info_id = specDetail.goods_info_id
        where goodsInfo.goods_info_id in
        <foreach collection="goodsInfoIds" item="item" index="index"  open="(" separator="," close=")">
            #{item}
        </foreach>
        group by goodsInfo.goods_info_id
    </select>

</mapper>