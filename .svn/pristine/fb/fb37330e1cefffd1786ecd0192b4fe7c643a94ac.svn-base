apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: ares
    name: ares-deployment
  name: ares
  namespace: sbc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ares
  template:
    metadata:
      labels:
        app: ares
    spec:
      imagePullSecrets:
        - name: docker-secret
      containers:
        - image: {{IMAGE_NAME}}
          imagePullPolicy: Always
          name: ares
          ports:
            - containerPort: 8490
              name: tomcat-port
          livenessProbe:
            httpGet:
              path: /act/health
              port: 8491
            initialDelaySeconds: 60
            periodSeconds: 30
            timeoutSeconds: 30
          env:
            - name: JAVA_OPTS
              value: {{JAVA_ENV_PARAMS}}
            - name: NACOS_ADDRESS
              valueFrom:
                configMapKeyRef:
                  name: sbc-config
                  key: nacosAddress
            - name: RESTART_
              value: {{DATE}}
#          resources:
#            limits:
#              cpu: '1'
#              memory: 3Gi
#            requests:
#              cpu: '1'JAVA_ENV_PARAMS
#              memory: 3Gi
          volumeMounts:
            - mountPath: /data/server/log
              name: ares-logs
      volumes:
        - name: ares-logs
          hostPath:
            path: /data/sbc/logs/ares
      hostNetwork: false
---