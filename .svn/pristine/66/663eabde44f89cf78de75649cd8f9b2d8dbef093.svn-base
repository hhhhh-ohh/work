package com.wanmi.sbc.order.orderperformance.model.root;

import com.fasterxml.jackson.databind.annotation.JsonDeserialize;
import com.fasterxml.jackson.databind.annotation.JsonSerialize;
import com.wanmi.sbc.common.annotation.CanEmpty;
import com.wanmi.sbc.common.util.CustomLocalDateTimeDeserializer;
import com.wanmi.sbc.common.util.CustomLocalDateTimeSerializer;
import lombok.Data;
import org.springframework.data.jpa.convert.threeten.Jsr310JpaConverters;

import jakarta.persistence.*;
import java.io.Serializable;
import java.math.BigDecimal;
import java.time.LocalDateTime;

/**
 * 订单业绩明细实体类
 */
@Data
@Entity
@Table(name = "order_performance_detail")
public class OrderPerformanceDetail implements Serializable {

    private static final long serialVersionUID = 1L;

    /**
     * 主键ID
     */
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "id")
    private Long id;

    /**
     * 业绩ID（关联order_performance表）
     */
    @Column(name = "performance_id")
    private String performanceId;

    /**
     * 明细类型（1-购买商品，2-退货商品）
     */
    @Column(name = "detail_type")
    private Integer detailType;

    /**
     * 订单ID
     */
    @Column(name = "order_id")
    private String orderId;

    /**
     * oid
     */
    @Column(name = "o_id")
    private String oId;

    /**
     * 商品SPU ID
     */
    @Column(name = "spu_id")
    private String spuId;

    /**
     * 商品SKU ID
     */
    @Column(name = "sku_id")
    private String skuId;

    /**
     * 商品名称
     */
    @Column(name = "sku_name")
    private String skuName;

    /**
     * 商品编号
     */
    @Column(name = "sku_no")
    private String skuNo;

    /**
     * 规格详情
     */
    @Column(name = "spec_details")
    private String specDetails;

    /**
     * 学校级别（小学/中学）
     */
    @Column(name = "school_level")
    private String schoolLevel;

    /**
     * 季节
     */
    @Column(name = "season")
    private String season;

    /**
     * 服装类型（多个，逗号分隔）
     */
    @Column(name = "clothing_types")
    private String clothingTypes;

    /**
     * 数量
     */
    @Column(name = "quantity")
    private Integer quantity;

    /**
     * 单价
     */
    @Column(name = "unit_price")
    private BigDecimal unitPrice;

    /**
     * 金额
     */
    @Column(name = "total_amount")
    private BigDecimal totalAmount;

    /**
     * 佣金金额
     */
    @Column(name = "commission_amount")
    private BigDecimal commissionAmount;

    /**
     * 校服商品单价
     */
    @Column(name = "uniform_unit_price")
    private BigDecimal uniformUnitPrice;

    /**
     * 校服商品总价
     */
    @Column(name = "uniform_total_amount")
    private BigDecimal uniformTotalAmount;



    /**
     * 退货单ID（退货时填写）
     */
    @Column(name = "return_order_id")
    private String returnOrderId;

    /**
     * 代理唯一码
     */
    @Column(name = "agent_unique_code")
    private String agentUniqueCode;

    /**
     * 代理ID
     */
    @Column(name = "agent_id")
    private String agentId;

    /**
     * 客户ID
     */
    @Column(name = "customer_id")
    private String customerId;

    /**
     * 备注
     */
    @Column(name = "remark")
    private String remark;

    /**
     * 创建时间
     */
    @Column(name = "create_time")
    @Convert(converter = Jsr310JpaConverters.LocalDateTimeConverter.class)
    @JsonSerialize(using = CustomLocalDateTimeSerializer.class)
    @JsonDeserialize(using = CustomLocalDateTimeDeserializer.class)
    private LocalDateTime createTime;

    /**
     * 更新时间
     */
    @Column(name = "update_time")
    @Convert(converter = Jsr310JpaConverters.LocalDateTimeConverter.class)
    @JsonSerialize(using = CustomLocalDateTimeSerializer.class)
    @JsonDeserialize(using = CustomLocalDateTimeDeserializer.class)
    private LocalDateTime updateTime;

    /**
     * 省ID
     */
    @Column(name = "province_id")
    @CanEmpty
    private Long provinceId;

    /**
     * 市ID
     */
    @Column(name = "city_id")
    @CanEmpty
    private Long cityId;

    /**
     * 区
     */
    @Column(name = "area_id")
    private Long areaId;

    /**
     * 省名称
     */
    @Column(name = "province_name")
    @CanEmpty
    private String provinceName;

    /**
     * 市名称
     */
    @Column(name = "city_name")
    @CanEmpty
    private String cityName;

    /**
     * 区名称
     */
    @Column(name = "area_name")
    private String areaName;
}
