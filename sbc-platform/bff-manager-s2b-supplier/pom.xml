<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>b2b-platform</artifactId>
        <groupId>com.wanmi.b2b</groupId>
        <version>5.1.0-RELEASE</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>bff-manager-s2b-supplier</artifactId>
    <properties>
        <main-class>com.wanmi.sbc.SupplierApplication</main-class>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.wanmi.b2b</groupId>
            <artifactId>bff-manager-store-base</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.alibaba.nacos</groupId>
            <artifactId>nacos-client</artifactId>
        </dependency>

        <!-- module -->
        <!-- tool -->

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>log4j-over-slf4j</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>objenesis</artifactId>
                    <groupId>org.objenesis</groupId>
                </exclusion>
            </exclusions>
        </dependency>


        <!-- module -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-pool2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-loadbalancer</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>*.**</exclude>
                        <exclude>*.xml</exclude>
                        <exclude>express-com</exclude>
                        <exclude>i18n/**</exclude>
                        <exclude>config/**</exclude>
                        <exclude>com.**.*/**</exclude>
                    </excludes>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>../3rd-lib/</classpathPrefix>
                            <useUniqueVersions>false</useUniqueVersions>
                            <mainClass>${main-class}</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>../resources/</Class-Path>
                        </manifestEntries>
                    </archive>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                </configuration>
            </plugin>



            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/resources</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <type>jar</type>
                            <includeTypes>jar</includeTypes>
                            <includeScope>runtime</includeScope>
                            <excludeArtifactIds>
                                bff-manager-base,
                                bff-manager-store-base,
                                service-empower-api,service-empower-bean,
                                service-elastic-api,service-elastic-bean,
                                service-vas-api,service-vas-bean,
                                service-order-api,service-order-bean,
                                service-message-api,service-message-bean,
                                service-crm-api,service-crm-bean,
                                service-marketing-api,service-marketing-bean,
                                service-goods-api,service-goods-bean,
                                service-account-api,service-account-bean,
                                service-customer-api,service-customer-bean,
                                ares-api,
                                service-setting-api,service-setting-bean,
                                service-common,
                                service-mq-api,service-mq-bean,service-dw-api,service-dw-bean
                            </excludeArtifactIds>
                            <outputDirectory>
                                ${project.build.directory}/3rd-lib/
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>bff-manager-base</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-empower-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-empower-bean</artifactId>
                        </include>
                        <include>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>bff-manager-store-base</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-elastic-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-elastic-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-vas-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-vas-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-order-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-order-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-message-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-message-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-crm-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-crm-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-marketing-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-marketing-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-goods-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-goods-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-account-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-account-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-customer-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-customer-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.ares</groupId>
                            <artifactId>ares-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-setting-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-setting-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-common</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-mq-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-mq-bean</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-dw-api</artifactId>
                        </include>
                        <include>
                            <groupId>com.wanmi.sbc</groupId>
                            <artifactId>service-dw-bean</artifactId>
                        </include>
                    </includes>
                    <mainClass>${main-class}</mainClass>
                    <layout>ZIP</layout>
                    <addResources>true</addResources>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>
</project>
